<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Temple container (clickable) -->
        <LinearLayout
            android:id="@+id/templeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imgTemple"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Temple Image"
                android:background="@drawable/image_rounded_background" />

            <TextView
                android:id="@+id/templeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temple Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Dharamshala Option (clickable) -->
        <TextView
            android:id="@+id/dharamshalaOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Dharamshala"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
