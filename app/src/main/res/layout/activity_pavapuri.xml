<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/pavapuri_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pavapuri"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="10dp" />

        <!-- YouTube Video -->
        <WebView
            android:id="@+id/pavapuri_video"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!-- History Heading -->
        <TextView
            android:id="@+id/history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- History Content -->
        <TextView
            android:id="@+id/pavapuri_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pavapuri, located in Bihar, is a sacred site for Jains as it is the place where Lord Mahavira, the 24th Tirthankara, attained Nirvana. The Jal Mandir located in the middle of a lotus-filled lake is one of the most iconic structures here."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
