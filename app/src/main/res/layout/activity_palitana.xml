<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="WebViewLayout">

        <!-- Heading -->
        <TextView
            android:id="@+id/palitana_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palitana"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="10dp" />

        <!-- YouTube Video (WebView) -->
        <WebView
            android:id="@+id/palitana_video"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!-- History Heading -->
        <TextView
            android:id="@+id/history_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- History Description -->
        <TextView
            android:id="@+id/palitana_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palitana is one of the holiest Jain Tirths, located in Gujarat..."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
