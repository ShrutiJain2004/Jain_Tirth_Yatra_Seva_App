<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTirthName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tirth Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <WebView
            android:id="@+id/youtubePlayer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            tools:ignore="WebViewLayout" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tvLocationText"
                android:text="View Location"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivCallIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:contentDescription="Call Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvCallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <!-- Dharamshala Row -->
        <LinearLayout
            android:id="@+id/dharamshalaRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivDharamshalaIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dharamshala"
                android:layout_marginEnd="8dp"
                android:contentDescription="Dharamshala Icon" />

            <TextView
                android:id="@+id/tvDharamshalaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Dharamshala"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Nearby Tirth Heading -->
        <TextView
            android:id="@+id/tvNearbyTirthHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby Tirth"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/black" />

        <!-- Nearby Tirth List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/nearbyTirthContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tirth_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tirth Name"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
