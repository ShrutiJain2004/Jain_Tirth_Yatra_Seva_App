<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">

        <!-- STUTIS Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stutis"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stutis are powerful Jain devotional hymns that praise the virtues of Tirthankars and elevate the soul."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingBottom="12dp" />

        <WebView
            android:id="@+id/stutiWebView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            tools:ignore="WebViewLayout" />

        <WebView
            android:id="@+id/stutiWebView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            tools:ignore="WebViewLayout" />

        <!-- STAVANS Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stavans"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stavans are melodic devotional songs expressing love, faith, and devotion towards Jain Tirthankars."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingBottom="12dp" />

        <WebView
            android:id="@+id/stavanWebView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp" />

        <WebView
            android:id="@+id/stavanWebView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
